<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:id="@+id/root_list_item"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="344dp"
        android:layout_height="183dp"
        android:paddingRight="20dp"
        android:background="@color/colorAccent"
        android:gravity="right">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:src="@mipmap/ic_launcher" />

    </LinearLayout>


    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="344dp"
        android:layout_height="184dp"
        android:layout_gravity="center"
        android:margin_top="20dp"
        app:cardElevation="2dp"
        app:cardUseCompatPadding="true"
        app:cardCornerRadius="4dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="0dp"
            android:paddingLeft="0dp"
            android:paddingRight="0dp"
            android:paddingTop="0dp">

            <ImageView
                android:id="@+id/imageViewCategoriaAllenamento"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textViewCategoriaAllenamento"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_alignTop="@+id/imageViewCategoriaAllenamento"
                android:layout_marginLeft="17dp"
                android:layout_marginStart="17dp"
                android:layout_toEndOf="@+id/imageViewCategoriaAllenamento"
                android:layout_toRightOf="@+id/imageViewCategoriaAllenamento"
                android:gravity="center"
                android:lineSpacingExtra="4sp"
                android:textAlignment="center"
                android:textColor="#89000000"
                android:textSize="12sp"
                tools:text="Gambe" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="12dp"
                android:layout_height="24dp"
                android:layout_alignParentEnd="false"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:layout_marginRight="14dp"
                android:layout_marginTop="18dp"
                android:src="@mipmap/ic_launcher" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/imageView2"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:elevation="19dp"
                android:lineSpacingExtra="4sp"
                android:textColor="#de000000"
                android:textSize="16sp"
                tools:text="Leg Extension" />


            <ImageView
                android:id="@+id/imageViewImmagineEsercizio"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignEnd="@+id/imageView2"
                android:layout_alignRight="@+id/imageView2"
                android:layout_alignTop="@+id/textView3"
                android:layout_marginVertical="18dp"
                android:src="@mipmap/ic_launcher" />


            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView7"
                android:layout_alignStart="@+id/textView7"
                android:layout_below="@+id/textView7"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#8b000000"
                android:textSize="14sp"
                tools:text="15 ripetizioni 20 kg" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView3"
                android:layout_alignStart="@+id/textView3"
                android:layout_below="@+id/textView3"
                android:layout_marginTop="6dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#8b000000"
                android:textSize="14sp"
                tools:text="12 ripetizioni 30 kg" />

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView4"
                android:layout_alignStart="@+id/textView4"
                android:layout_below="@+id/textView4"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#8b000000"
                android:textSize="14sp"
                tools:text="10 ripetizioni 40 kg" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/textView6"
                android:layout_alignStart="@+id/textView6"
                android:layout_below="@+id/textView6"
                android:layout_marginTop="4dp"
                android:lineSpacingExtra="6sp"
                android:textColor="#8b000000"
                android:textSize="14sp"
                tools:text="8 ripetizioni a 45 kg" />


        </RelativeLayout>


    </android.support.v7.widget.CardView>

</RelativeLayout>